      state
      FROM t_activity
      WHERE id = #{id}
  </select>

  <!--
    查询已经到了活动结束时间的活动
    主要用于计时器
  -->
  <select id="findEndTimeActivity" resultType="cn.edu.bnuz.seawas.entity.Activity">
    SELECT
      <include refid="Base_Column_List"/>,
      <include refid="productJoinColumns" />
    FROM t_activity a
      <include refid="productJoins"/>
    <where>
      a.endTime LIKE concat(#{endTime}, '%')
    </where>
  </select>
</mapper>