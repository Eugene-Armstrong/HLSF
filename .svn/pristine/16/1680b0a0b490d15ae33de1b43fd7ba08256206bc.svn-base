  <sql id="Base_Column_List" >
    a.id,
    a.productId AS "product.id",
    a.price,
    a.departTime,
    a.gatherPlace,
    a.tripNumber,
    a.totalNumber,
    a.state,
    a.QRCode,
    a.createTime,
    a.createUser AS "createUser.id",
    a.updateTime,
    a.updateUser AS "updateUser.id",
    a.endTime,
    a.closeTime,
    a.onSalePrice,
    a.discountRules,
    a.priceIntroduce,
    a.route,
    a.productIntroduce,
    a.city,
    a.delFlag
