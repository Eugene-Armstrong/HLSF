<script src="../js/jquery-3.2.0.min.js"></script>
<script src="../js/jquery-weui.min.js"></script>
<script src="../js/swiper.min.js"></script>
<script src="../js/fastclick.js"></script>
<script>
    $(function () {
        FastClick.attach(document.body);
        //确定插入常用人
        $(".confirm").click(function () {
            //
            window.location.href = "activity-enroll.html"
        });

        //选择常用人
        $(".weui-badge").click(function () {
            //
            var $self = $(this);
            if ($self.text() == "选择")
                $self.text("已选");
            else
                $self.text("选择");
            $self.toggleClass("ic-selected");
            $self.parent().parent().parent().toggleClass("user-selected")
        });

        //设为默认状态
        $("body").on("click",".my-status-1",function () {
            var $self = $(this);
            if ($self.text() == "设为默认"){
                $(".my-status-2").each(function () {
                    $(this).text("设为默认");
                    $(this).removeClass("my-status-2").addClass("my-status-1");
                });
                $self.text("默认");
                $self.toggleClass("my-status-2");
            }
        });
    });
</script>
</body>
