    <style>
        .page-title {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 999;
            background: #fafafa;
            color: #666;
            font-size: 16px;
            padding: 10px 0;
            text-align: center;
        }
        .my-tip{
            /*position: absolute;*/
            z-index: -1;
            text-align: center;
            margin-top: 70px;
            line-height: 30px;
            color: #999}
        .weui-cells{
            font-size: 14px;
            overflow: inherit;
            border: 2px solid #fff
        }
        .weui-cells:before{border-top: none}
        .weui-cells:after{border-bottom: none}
        .weui-btn_mini{line-height: 21px}
        a {color: #679aff}
        .return {
            position: absolute;
            left: 10px;
            width: 20px;
            height: 20px;
            background: url("../images/return.png");
            background-size: cover;
        }
        .confirm{
            position: absolute;
            right: 10px;
        }

        /*选择*/
        .weui-badge {
            z-index: 998;
            background: #ddd;
            position: absolute;
            top: -10px;
            right: 15px;
            padding: 15px 10px;
            border-radius: 50%;
        }
        .ic-selected{background: #679aff}
        .user-selected{border: 2px solid #679aff}
        .existed .weui-cell__bd{color: #999}
        .real-name{width: 50%}
    </style>
</head>
