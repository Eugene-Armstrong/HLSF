<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@include file="/WEB-INF/include/taglib.jsp" %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>编辑游记</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0,user-scalable=no">
    <meta name="description" content="海浪山风休闲户外旅游在线平台">
    <link rel="stylesheet" href="${ctx}/css/weui.min.css">
    <link rel="stylesheet" href="${ctx}/css/jquery-weui.min.css">
    <link rel="stylesheet" href="${ctx}/css/index.css">
    <link rel="stylesheet" href="${ctx}/js/layout/base.css">
    <style>
        body{padding: 50px 0;
            /*background: #fff*/
        }
        .page-title {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 999;
            background: #679aff;
            color: #fff;
            font-size: 16px;
            padding: 10px 0;
            text-align: center;
        }
        .return {
            position: absolute;
            left: 10px;
            width: 20px;
            height: 20px;
            background: url("${ctx}/images/return.png");
            background-size: cover;
        }
        .go-home{
            position: absolute;
            right: 10px;
            width: 22px;
            height: 22px;
        }
        a{color: #679aff;font-size: 14px}
        .my-btn{position: fixed;bottom: 0;width: 100%;z-index: 2}
        .weui-btn{border-radius: 0;font-size: 16px}
        #articleEditor{
            background: #fff;
            margin-top: 10px;
            line-height: 25px;
            padding:15px;
        }
        .weui-cell__hd {
            display: -webkit-box;
        }
        .weui-cell__hd img {
            width: 16px;
            height: 16px;
            margin-right: 10px;
        }
        .Eleditor-textStyle-color,
        .Eleditor-textStyle-bgColor,
        .Eleditor-textStyle-fontSize,
        .Eleditor-textStyle-lineHeight
        {display: none}
        .Eleditor-placeholder{text-align: center}
        .weui-cells{margin-top: 10px}
        #add-cover{
            position: relative;
            width: 100%;
            height:150px;
            background:#fff;
            text-align: center;
            color: #bbb;
            cursor: pointer;
            -webkit-tap-highlight-color:rgba(0,0,0,0);
        }
        #uploaderInput{display: none}
        .weui-panel{z-index: -1}
        .weui-agree{padding:15px 0 15px 15px;display: inline-block}
        .weui-agree__checkbox{
            top: 5px;
            border: 3px solid #679aff;
            border-radius: 0;
            width: 20px;
            height: 20px;
        }
        .weui-agree__checkbox:checked:before{
            background: #37a1ff;
            color: #fff;
            font-size: 22px;
        }
        .weui-media-box__desc{line-height: 20px;font-size: 12px;}
        .weui-media-box{padding-top: 10px}
    </style>
</head>
<body>
<!--版头-->
<div class="page-title">
    <a href="javascript:history.back()" class="return"></a>
    编辑游记
    <a href="${ctx}/wechat/index/show?cityId=${sessionScope.currentCity.id}">
        <img src="${ctx}/images/topbar-home.png" class="go-home">
    </a>
</div>
<!--游记封面-->
<input id="uploaderInput" onchange="uploadImg(this)" type="file"
       accept="image/*" multiple="">
<div id="add-cover" onclick="myTrigger()">
    <img src="${ctx}/images/addCover.png" style="width: 60px;margin-top: 30px">
    <br>点击添加封面
    <img src="${ctx}/images/ic_cover.png" style="width:60px;position: absolute;bottom: 0;right: 0">
</div>
<!--游记标题-->
<div class="weui-cells weui-cells_form">
    <div class="weui-cell">
        <div class="weui-cell__hd">
            <img src="${ctx}/images/icon_type.png">
        </div>
        <div class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入游记标题(必填)">
        </div>
    </div>
</div>
<!--游记图文内容-->
<div id="articleEditor"></div>
<!--游记编辑说明-->
<div class="weui-panel weui-panel_access">
    <div class="weui-panel__hd">☞ 温馨提示：</div>
    <div class="weui-panel__bd">
        <div class="weui-media-box weui-media-box_text">
            <p class="weui-media-box__desc">1. 单次最多可插入9张图片，可分多次插入</p>
            <p class="weui-media-box__desc">2. 目前暂不支持草稿保存功能，退出编辑需谨慎</p>
            <p class="weui-media-box__desc">3. 游记提交后，经后台工作人员审核通过即可成功发布</p>
        </div>
    </div>
</div>
<label for="agree" class="weui-agree">
    <input id="agree" type="checkbox" class="weui-agree__checkbox">
    <span>&nbsp;我已阅读并同意 </span>
</label>
<a href="#">《游记使用服务协议》</a>
<!--操作-->
<div class="weui-cells">
    <div class="weui-flex my-btn">
        <div class="weui-flex__item">
            <button class="weui-btn weui-btn_warn" id="cancel">退出编辑</button>
        </div>
        <div class="weui-flex__item">
            <button class="weui-btn weui-btn_primary" id="saveToSubmit" type="button">保存提交</button>
        </div>
    </div>
</div>
<script src="${ctx}/js/jquery-3.2.0.min.js"></script>
<script src="${ctx}/js/jquery-weui.min.js"></script>
<script src="${ctx}/js/Eleditor.min.js"></script>
<script src="${ctx}/js/webuploader.min.js"></script>
<script src="${ctx}/js/swiper.min.js"></script>
<script>
    function myTrigger() {
        alert("你点击了封面");
//        document.getElementById("uploaderInput").click();
    }

    //选择图片并预览(需要当前浏览器支持FileReader接口)
    function uploadImg(obj) {
        for(var i=0;i<obj.files.length;i++){
            var file = obj.files[i];
            var reader = new FileReader();
            reader.onload = function (e) { // 成功读取
                $("#add-cover").css({
                    "background":"url('"+this.result + "')",
                    "background-size":"cover"
                }).html("");
            };
            reader.readAsDataURL(file);
        }
    }

    //实例化Eleditor
    var Edr = new Eleditor({
        el: '#articleEditor', //容器
        //placeHolder: '请输入内容',
        upload:{ //上传配置
            server: '/upload.json', //上传路径
            compress: true, //上传前是否压缩图片
            fileSizeLimit: 10 //限制图片上传大小，单位M
        },
        toolbars: [
            'insertText',
            'editText',
            'insertImage',
            'deleteBefore',
            'deleteAfter',
            'deleteThis',
            'undo',
            'cancel'
        ]
    });

    $(function () {
        $(document).on("click","#cancel",function () {
            var sure = confirm("退出将放弃保存当前编辑的所有内容，确定退出吗？");
            if(sure){
                window.location.href = "javascript:history.back()"
            }
        }).on("click","#saveToSubmit",function () {
            var isDisclaimed,
                journeyContent = Edr.getContentText(),
                $title = $(".weui-input");
            if($("#agree").is(":checked")){
                isDisclaimed = true;
            }
            if($title.val().length == 0){
                alert("游记标题不能为空");
                $title.focus();
            }else if(journeyContent.length == 0 || journeyContent == "-- 点击此处编辑游记内容 --"){
                alert("游记内容不能为空")
            } else if(!isDisclaimed){
                alert("请先阅读并勾选同意《游记使用服务协议》");
            }else{
                alert("游记内容："+journeyContent);
            }
        })
    });

    //请记住下面常用方法---------------------------------------->
    //Edr.append(""); 往编辑器追加内容
    //Edr.getContent(); 获取编辑器内容
    //Edr.getContentText(); 获取编辑器纯文本
    //Edr.destory(); 移除编辑器
</script>
</body>
</html>
