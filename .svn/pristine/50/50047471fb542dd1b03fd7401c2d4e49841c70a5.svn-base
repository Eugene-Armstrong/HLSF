<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.bnuz.seawas.dao.OutdoorMapper">

    <sql id="baseColumns">
        a.id AS "id",
        a.title AS "title",
        a.webURL AS "webURL",
        a.pic AS "pic",
        a.type AS "type",
        a.createTime AS "createTime"
    </sql>

    <select id="get" resultType="cn.edu.bnuz.seawas.entity.Outdoor">
        SELECT
          <include refid="baseColumns"/>
        FROM t_outdoor a
        WHERE
          a.id = #{id}
    </select>

    <select id="findList" resultType="cn.edu.bnuz.seawas.entity.Outdoor">
        SELECT
          <include refid="baseColumns"/>
        FROM t_outdoor a
        <where>
            <if test="type != null and type != ''">
                a.type = #{type}
            </if>
            <if test="title != null and title != ''">
                AND a.title LIKE concat(concat('%', #{title}), '%')
            </if>
            ORDER BY a.createTime DESC
        </where>
    </select>

    <insert id="insert">
        INSERT INTO t_outdoor (
          id,
          title,
          webURL,
          pic,
          type
        ) VALUES (
          #{id},
          #{title},
          #{webURL},
          #{pic},
          #{type}
        )
    </insert>

    <update id="update">
        UPDATE t_outdoor
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="pic != null and pic != ''">
                pic = #{pic},
            </if>
            <if test="webURL != null and webURL != ''">
                webURL = #{webURL},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        DELETE FROM t_outdoor
        WHERE id = #{id}
    </delete>
</mapper>