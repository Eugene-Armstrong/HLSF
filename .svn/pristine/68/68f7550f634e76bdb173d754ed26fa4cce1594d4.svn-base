<!--设为领队模态框-->
<div id="setleader">
    <div class="dialog">
        <div class="dialog-head">
            <span class="close rotate-hover"></span><strong>设为领队</strong>
        </div>
        <form action="">
            <div class="dialog-body">
                <table class="table table-hover">
                    <tr>
                        <td class="text-right">领队工号：</td>
                        <td><input type="text" class="input" placeholder="请输入领队工号" required></td>
                    </tr>
                    <tr>
                        <td class="text-right">领队评分：</td>
                        <td><input type="number" class="input score" placeholder="请输入领队评分(0.0~5.0)" required></td>
                    </tr>
                </table>
            </div>
            <div class="dialog-foot">
                <button class="button border-blue">
                    确定
                </button>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        var score;
        var scoreInput;
        $("body").on("change",".dialog-body .score",function () {
            scoreInput = $(this);
            score = parseInt(scoreInput.val());
        });
        $("body").on("click",".dialog-foot .border-blue",function () {
            if(score < 0){
                alert("评分不得少于0分，请重新输入");
                scoreInput.val("");
                score = scoreInput.val();
                return false;
            }
            if(score > 5){
                alert("评分不得超过5分，请重新输入");
                scoreInput.val("");
                score = scoreInput.val();
                return false;
            }
        })
    });
</script>
